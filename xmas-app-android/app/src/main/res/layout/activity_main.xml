<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <Button
        android:text="Vote"
        android:id="@+id/vote"
        style="@style/buttonStyle"
        android:layout_toLeftOf="@+id/involved"
        android:layout_alignTop="@+id/sponsors"
        android:layout_alignRight="@+id/involved"
        android:layout_alignEnd="@+id/involved"
        android:layout_marginRight="56dp" />

    <Button
        android:text="Sponsors"
        android:id="@+id/sponsors"
        style="@style/buttonStyle"
        android:layout_toRightOf="@+id/vote"
        android:layout_marginLeft="50dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/involved"
        android:layout_alignStart="@+id/involved" />
    <Button
        android:text="Get Involved"
        android:id="@+id/involved"
        style="@style/buttonStyle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />
    <Button
        android:text="Event Schedule"
        android:id="@+id/schedule"
        style="@style/buttonStyle"
        android:layout_below="@+id/vote"
        android:layout_toLeftOf="@+id/sponsors"
        android:layout_toStartOf="@+id/sponsors" />
    <Button
        android:text="Vistor Info"
        android:id="@+id/info"
        style="@style/buttonStyle"
        android:layout_below="@+id/vote"
        android:layout_toRightOf="@+id/schedule"
        android:layout_toEndOf="@+id/schedule" />
    <Button
        android:text="Park Map"
        android:id="@+id/map"
        style="@style/buttonStyle"
        android:layout_below="@+id/sponsors"
        android:layout_toRightOf="@+id/vote"
        android:layout_toEndOf="@+id/vote" />


</RelativeLayout>
