<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${packageName}.${activityClass}" >
			
    

    <TabHost
        android1:id="@+id/tabhost"
        android1:layout_width="match_parent"
        android1:layout_height="match_parent"
        android1:layout_alignParentLeft="true"
        android1:layout_alignParentTop="true" >

        <LinearLayout
            android1:layout_width="match_parent"
            android1:layout_height="match_parent"
            android1:orientation="vertical" >

            <TabWidget
                android1:id="@android:id/tabs"
                android1:layout_width="match_parent"
                android1:layout_height="wrap_content" >
            </TabWidget>

            <FrameLayout
                android1:id="@android:id/tabcontent"
                android1:layout_width="match_parent"
                android1:layout_height="match_parent" >

                <RelativeLayout
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background"
                    android:orientation="vertical" >

                    <Button
				        android:text="Vote"
				        android:id="@+id/vote"
				        style="@style/buttonStyle"
				        android:layout_toLeftOf="@+id/involved"
				        android:layout_alignTop="@+id/sponsors"
				        android:layout_alignRight="@+id/involved"
				        android:layout_alignEnd="@+id/involved"
				        android:layout_marginRight="56sp"
						android:textStyle="bold"
				         />
				
				    <Button
				        android:text="Sponsors"
				        android:id="@+id/sponsors"
				        style="@style/buttonStyle"
				        android:layout_toRightOf="@+id/vote"
				        android:layout_marginLeft="50sp"
				        android:layout_centerVertical="true"
				        android:layout_alignLeft="@+id/involved"
				        android:layout_alignStart="@+id/involved"
				        android:textStyle="bold" />
				    <Button
				        android:text="Get Involved"
				        android:id="@+id/involved"
				        style="@style/buttonStyle"
				        android:layout_alignParentTop="true"
				        android:layout_centerHorizontal="true"
				        android:layout_marginTop="60sp"
				        android:textStyle="bold" />
				    <Button
				        android:text="Event Schedule"
				        android:id="@+id/schedule"
				        style="@style/buttonStyle"
				        android:layout_below="@+id/vote"
				        android:layout_toLeftOf="@+id/sponsors"
				        android:layout_toStartOf="@+id/sponsors" 
				        android:textStyle="bold"/>
				    <Button
				        android:text="Vistor Info"
				        android:id="@+id/info"
				        style="@style/buttonStyle"
				        android:layout_below="@+id/vote"
				        android:layout_toRightOf="@+id/schedule"
				        android:layout_toEndOf="@+id/schedule"
				        android:textStyle="bold" />
				    <Button
				        android:text="Park Map"
				        android:id="@+id/map"
				        style="@style/buttonStyle"
				        android:layout_below="@+id/sponsors"
				        android:layout_toRightOf="@+id/vote"
				        android:layout_toEndOf="@+id/vote"
				        android:textStyle="bold" />

                </RelativeLayout>

                <LinearLayout
                    android1:id="@+id/tab2"
                    android1:orientation="vertical"
                    android1:layout_width="match_parent"
                    android1:layout_height="match_parent" >
                    <WebView
				        android:id="@+id/webView"
				        android:layout_width="match_parent"
				        android:layout_height="match_parent" />
                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </TabHost>

</RelativeLayout>