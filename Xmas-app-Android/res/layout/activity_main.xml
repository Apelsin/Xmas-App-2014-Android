<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    
    tools:context="${packageName}.${activityClass}" >
			
    

    <TabHost
        android1:id="@+id/tabhost"
        android1:layout_width="match_parent"
        android1:layout_height="match_parent"
        android1:layout_alignParentStart="true"
        android1:layout_alignParentLeft="true"
        android1:layout_alignParentTop="true" >

        <LinearLayout
            android1:layout_width="match_parent"
            android1:layout_height="match_parent" 
            android1:orientation="vertical" >

            <TabWidget
                android1:id="@android:id/tabs"
                android1:layout_width="match_parent"
                android1:layout_height="wrap_content" >
            </TabWidget>

            <FrameLayout
                android1:id="@android:id/tabcontent"
                android1:layout_width="match_parent"
                android1:layout_height="match_parent" >

                <RelativeLayout
                    android:id="@+id/tab1"
                    android1:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android1:gravity="fill" >

                    <ImageView
                        android1:id="@+id/ivBackground"
                        android1:layout_width="wrap_content"
                        android1:layout_height="wrap_content"
                        android1:layout_centerHorizontal="true"
                        android1:layout_centerVertical="true"
                        android1:scaleType="center"
                        android1:src="@drawable/background" />

                    <ImageButton
                        android1:id="@+id/ImageButton1"
                        android1:layout_width="120dp"
                        android1:layout_height="144dp"
                        android1:layout_alignParentTop="true"
                        android1:layout_centerHorizontal="true"
                        android1:layout_marginTop="48dp"
                        android1:scaleType="fitCenter"
                        android1:src="@drawable/redornamentlarge" />

                    <ImageButton
                        android1:id="@+id/ImageButton2"
                        android1:layout_width="120dp"
                        android1:layout_height="144dp"
                        android1:layout_below="@+id/ImageButton1"
                        android1:layout_marginRight="-72dp"
                        android1:layout_marginTop="-48dp"
                        android1:layout_toLeftOf="@+id/ImageButton1"
                        android1:scaleType="fitCenter"
                        android1:src="@drawable/redornamentlarge" />

                    <ImageButton
                        android1:id="@+id/ImageButton01"
                        android1:layout_width="120dp"
                        android1:layout_height="144dp"
                        android1:layout_alignTop="@+id/ImageButton2"
                        android1:layout_marginLeft="48dp"
                        android1:layout_toRightOf="@+id/ImageButton2"
                        android1:scaleType="fitCenter"
                        android1:src="@drawable/redornamentlarge" />

                    <ImageButton
                        android1:id="@+id/ImageButton02"
                        android1:layout_width="120dp"
                        android1:layout_height="144dp"
                        android1:layout_below="@+id/ImageButton2"
                        android1:layout_marginRight="-72dp"
                        android1:layout_marginTop="-48dp"
                        android1:layout_toLeftOf="@+id/ImageButton2"
                        android1:scaleType="fitCenter"
                        android1:src="@drawable/redornamentlarge" />

                    <ImageButton
                        android1:id="@+id/ImageButton03"
                        android1:layout_width="120dp"
                        android1:layout_height="144dp"
                        android1:layout_alignTop="@+id/ImageButton02"
                        android1:layout_marginLeft="48dp"
                        android1:layout_toRightOf="@+id/ImageButton02"
                        android1:scaleType="fitCenter"
                        android1:src="@drawable/redornamentlarge" />

                    <ImageButton
                        android1:id="@+id/ImageButton04"
                        android1:layout_width="120dp"
                        android1:layout_height="144dp"
                        android1:layout_alignTop="@+id/ImageButton02"
                        android1:layout_marginLeft="144dp"
                        android1:layout_toRightOf="@+id/ImageButton02"
                        android1:scaleType="fitCenter"
                        android1:src="@drawable/redornamentlarge" />
                    
                </RelativeLayout>

                <LinearLayout
                    android1:id="@+id/tab2"
                    android1:orientation="vertical"
                    android1:layout_width="match_parent"
                    android1:layout_height="match_parent" >
                    <WebView
				        android:id="@+id/AboutUswebView"
				        android:layout_width="match_parent"
				        android:layout_height="match_parent" />
                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </TabHost>

</RelativeLayout>