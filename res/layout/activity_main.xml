<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    
    tools:context="${packageName}.${activityClass}" >
			
    

    <TabHost
        android1:id="@+id/tabhost"
        android1:layout_width="match_parent"
        android1:layout_height="match_parent"
        android1:layout_alignParentStart="true"
        android1:layout_alignParentLeft="true"
        android1:layout_alignParentTop="true" >

        <LinearLayout
            android1:layout_width="match_parent"
            android1:layout_height="match_parent" 
            android1:orientation="vertical" >

            <TabWidget
                android1:id="@android:id/tabs"
                android1:layout_width="match_parent"
                android1:layout_height="wrap_content" >
            </TabWidget>

            <FrameLayout
                android1:id="@android:id/tabcontent"
                android1:layout_width="match_parent"
                android1:layout_height="match_parent" >

                <RelativeLayout
                    android:id="@+id/tab1"
                    android1:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android1:gravity="fill" >

                    <ImageView
                        android1:id="@+id/ivBackground"
                        style="@style/imgBackground"
                        android1:layout_width="match_parent"
                        android1:layout_height="match_parent" />

                    <Button
                        android1:id="@+id/btnGetInvolved"
                        android1:layout_alignParentTop="true"
                        android1:layout_centerHorizontal="true"
                        android1:layout_marginTop="48dp"
                        android1:scaleType="fitCenter"
                        android1:text="Get Involved"
                        style="@style/bsOrnamentRed" />

                    <Button
                        android1:id="@+id/btnVote"
                        style="@style/bsOrnamentRed"
                        android1:layout_below="@+id/btnGetInvolved"
                        android1:layout_marginRight="-48dp"
                        android1:layout_marginTop="-24dp"
                        android1:layout_toLeftOf="@+id/btnGetInvolved"
                        android1:scaleType="fitCenter"
                        android1:text="Vote" />

                    <Button
                        android1:id="@+id/btnSponsors"
                        style="@style/bsOrnamentRed"
                        android1:layout_alignTop="@+id/btnVote"
                        android1:layout_marginLeft="48dp"
                        android1:layout_toRightOf="@+id/btnVote"
                        android1:scaleType="fitCenter"
                        android1:text="Sponsors" />

                    <Button
                        android1:id="@+id/btnEventSchedule"
                        style="@style/bsOrnamentRed"
                        android1:layout_below="@+id/btnVote"
                        android1:layout_marginRight="-48dp"
                        android1:layout_marginTop="-24dp"
                        android1:layout_toLeftOf="@+id/btnVote"
                        android1:scaleType="fitCenter"
                        android1:text="Event Schedule" />

                    <Button
                        android1:id="@+id/btnVisitorInfo"
                        style="@style/bsOrnamentRed"
                        android1:layout_alignTop="@+id/btnEventSchedule"
                        android1:layout_marginLeft="48dp"
                        android1:layout_toRightOf="@+id/btnEventSchedule"
                        android1:scaleType="fitCenter"
                        android1:text="Visitor Info" />

                    <Button
                        android1:id="@+id/btnParkMap"
                        style="@style/bsOrnamentRed"
                        android1:layout_alignTop="@+id/btnEventSchedule"
                        android1:layout_toRightOf="@+id/btnVisitorInfo"
                        android1:scaleType="fitCenter"
                        android1:text="Park Map" />

                    <Button
                        android1:id="@+id/btnFacebook"
                        style="@style/bsFacebook"
                        android1:layout_toLeftOf="@+id/btnTwitter" />

                    <Button
                        android1:id="@+id/btnTwitter"
                        style="@style/bsTwitter"
                        android1:layout_toLeftOf="@+id/btnSiteSocial" />

                    <Button
                        android1:id="@+id/btnSiteSocial"
                        style="@style/bsSiteSocial"
                        android1:layout_alignParentTop="true"
                        android1:layout_centerInParent="true" />

                    <Button
                        android1:id="@+id/btnPinterest"
                        style="@style/bsPinterest"
                        android1:layout_toRightOf="@+id/btnSiteSocial" />

                    <Button
                        android1:id="@+id/btnYouTube"
                        style="@style/bsYouTube"
                        android1:layout_toRightOf="@+id/btnPinterest" />

                    <Button
                        android1:id="@+id/btnDonate"
                        style="@style/bsDonate"
                        android1:layout_below="@+id/btnSiteSocial"
                        android1:layout_toRightOf="@+id/btnGetInvolved" />
                    
                </RelativeLayout>

                <LinearLayout
                    android1:id="@+id/tab2"
                    android1:orientation="vertical"
                    android1:layout_width="match_parent"
                    android1:layout_height="match_parent" >

                    <WebView
                        android:id="@+id/wvAboutUs"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </TabHost>

</RelativeLayout>